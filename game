def PLAY_GAME():
    def PLAY_GAME_Fun():
        print('You can, A) walk up to the door B) leave the house.')
        anw = input('>') 
        if anw in A:
            door()
        elif anw in B:
            print('')
            print('Suit youself')
            print('')
            print('do you want to restart?')
            print('')
            anw = input('>')
            if anw in Yes:
                PLAY_GAME()
            elif anw in No:
                print('')
                print('ok')
            else: 
                print('')
                print('Ill take that as a no. ')
        else:
            print('please input a, or b n/')
            print('')
            PLAY_GAME_Fun()
    print('') 
    print('You are standing outside of a large old house. The paint is peeling and the windows are shattered and boarded up')
    PLAY_GAME_Fun()
        
        
PLAY_GAME()
