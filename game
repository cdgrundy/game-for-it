A = ['a', 'A', 'ey', 'AY'] 
B = ['b', 'B', 'bee'] 
C = ['c', 'C', 'see']
D = ['d', 'D', 'dee']
Yes = ['Y', 'y', 'Yes', 'yes']
No = ['N', 'n', 'No', 'no']
TV_On = False
OnOrOff = ('on')


def outside():
    def outsideFun():
        print('You can, A) walk back up to the door B) Leave the house.\n')
        anw = input('>') 
        if anw in A:
            door()
        elif anw in B:
            print('\nSuit youself')
            print('\ndo you want to keep going?\n')
            anw = input('>')
            if anw in Yes:
                PLAY_GAME()
            elif anw in No:
                print('\nok')
            else: 
                print('\nIll take that as a no. ')
        else:
            print('')
            print('please input a, or b')
            outsideFun()
    print('')
    print('You are standing outside of the house.\n')
    outsideFun()


def door():
    def doorFun():
        print('You can, A) go through the door B) Go back to the front lawn.\n')
        anw = input('>')
        if anw in A:
            hallway()
        elif anw in B:
            outside()
        else:
            print('\nplease input a, or b')
            doorFun()
    print('\nYou are standing in front of a large wooden door.\n')
    doorFun()


def hallway():
    def hallwayFun():
        print('You can, A) Go forward B) Turn right C) go back out the door\n')
        anw = input('>') 
        if anw in A:
            room1()
        elif anw in B:
            room2()
        elif anw in C:
            door()
        else:
            print('\nplease input a, b, or c')
            hallwayFun()       
    print('\nthere is a short hallway stretching out in front of you\n')
    hallwayFun()


def room1():
    def room1Fun():
        global OnOrOff
        global TV_On
        print('You can, A) Search room B) Turn',OnOrOff, 'TV C) go back out to the hallway\n')
        anw = input('>') 
        if anw in A:
            print('\nThere is nothing of interest in this room\n')
            OnOrOff = room1Fun()
        elif anw in B:
            if TV_On == False:
                TV_On = True
                print('\nYou turn the TV on and cartoons start blaring out of it\n')
                OnOrOff = ('off')
                OnOrOff = room1Fun()
                return OnOrOff
            else:
                TV_On = False
                print('\nYou turn the cartoons back off\n')
                OnOrOff = ('on')
                OnOrOff = room1Fun()
                return OnOrOff
        elif anw in C:
            hallway()
        else:
            print('\nplease input a, b, or c')
            OnOrOff = room1Fun(OnOrOff, TV_On)
    print('\nYou\'re in a large room, with a couch at one end and a TV at the other\n')
    OnOrOff = room1Fun(OnOrOff, TV_On)


def Crib():
    def cribFun():
        global TV_On
        print('You can A) Search crib B) Feel matress C) Enter crib D) Walk away from crib\n')
        awn = input('>')
        if awn in A:
            print('\nYou find a creepy old doll\n')
            cribFun()
        elif awn in B:
            print('\nThe matress feels very soft and squishy\n')
            cribFun()
        elif awn in C:
            if TV_On == True: 
                print('You lie there for a while then suddenly, you fall through')
            else:
                print('\nYou lie there for a while and start to feel like a pedophile waiting for its prey\n')
                cribFun()
        elif awn in D:
            room2()     
        else:
            print('\nplease input a, b, or c')
            cribFun()
    print('\nit\'s an old crib\n')
    cribFun()
            

def room2():
    def room2Fun():
        print('You can, A) look in the bunk beds B) look in the crib C) go back to the hallway\n')
        anw = input('>') 
        if anw in A:
            print('\nthey\'re old and gross, looks like they havn\'t been used in quite a while\n')
            room2Fun()
        elif anw in B:
            Crib()
        elif anw in C:
            hallway()
        else:
            print('\nplease input a, b, or c')
            room2Fun()
    print('\nYou\'re in a small bedroom with a bunk bed and a crib\n')
    room2Fun()


def room3():
    def room3Fun():
        print('You can, A) Go forward B) Turn right C) go back out the door\n') 
        awn = input('>')
        if anw in A:
            room1(OnOrOff)
        elif anw in B:
            room2()
        elif anw in C:
            door()
        else:
            print('\nplease input a, b, or c')
            room3Fun()
    print('\nthere is a short hallway stretching out in front of you\n')
    room3Fun()


def garage():
    def garageFun():
        print('You can A) do something B) do something else C) don a cape and fight crime\n')
        anw = input('>')
        if anw in A:
            room1(OnOrOff)
        elif anw in B:
            print('\nSuit youself')
        elif anw in C:
            print('\nYou take an old cape sitting on the ground and put it on. After a while of serching you come across a robbery! You run in and try and stop the burgalurs but they beat you up. You walk home, defeated.')
        else:
            print('\nplease input an answer')       
    print('\nyou are in  a garage\n')
    garageFun()
        

