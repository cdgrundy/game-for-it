            doorFun()
        else:
            print('\nplease input a, or b')
            doorFun()
    print('\nYou are standing in front of a large wooden door.')
    doorFun()
    
    
def hallway():
    def hallwayFun():
        global inventory
        print('You can, A) Go forward B) Turn right C) Turn left D) Go back outside\n')
        anw = input('>') 
        if anw in A:
            room1()
        elif anw in B:
            room2()
        elif anw in C:
            room3()
        elif anw in D:
            outside()
        elif anw in I:
            print('')
            print(inventory)
            time.sleep(2)
            print('')
            hallwayFun()
        else:
            print('\nplease input a, b, or c')
            hallwayFun()       
    print('\nthere is a short hallway stretching out in front of you')
    hallwayFun()
        
        
def room1():
    def room1Fun():
        global inventory
        global OnOrOff
        global TV_On
        print('You can, A) Search room B) Turn',OnOrOff, 'TV C) go back out to the hallway\n')
        anw = input('>') 
        if anw in A:
            print('\nThere is nothing of interest in this room exept for a small toad')
            OnOrOff = room1Fun()
        elif anw in B:
            if TV_On == False:
                TV_On = True
                print('\nYou turn the TV on and cartoons start blaring out of it')
                OnOrOff = ('off')
                OnOrOff = room1Fun()
                return OnOrOff
            else:
                TV_On = False
                print('\nYou turn the cartoons back off')
                OnOrOff = ('on')
                OnOrOff = room1Fun()
                return OnOrOff
        elif anw in C:
            hallway()
        elif anw in I:
            print('')
            print(inventory)
            time.sleep(2)
            print('')
            room1Fun()
        else:
            print('\nplease input a, b, or c')
            OnOrOff = room1Fun()
    print('\nYou\'re in a large room, with a couch at one end and a TV at the other')
    OnOrOff = room1Fun()
    
    
def Crib():
    def cribFun():
        global TV_On
        global inventory
        def cribFun2():
            global HaveDoll
            if HaveDoll == False:
                print('\nYou find a creepy old doll\nDo you want to take it?\n')
                anw = input('>')
                if anw in Yes:
                    HaveDoll = True
                    inventory.append('doll')
                    print('\nyou take the doll')
                    cribFun()
                elif anw in No:
                    print('\nok')
                    cribFun()
                elif anw in I:
                    print('')
                    print(inventory)
                    time.sleep(2)
                    cribFun2()
                else:
                    print('please input yes or no')
                    cribFun2()
        global inventory
        print('You can A) Search crib B) Feel matress C) Enter crib D) Walk away from crib\n')
        anw = input('>')
        if anw in A:
            cribFun2()
        elif anw in B:
            print('\nThe matress feels very soft and squishy')
            cribFun()
        elif anw in C:
            if TV_On == True: 
                print('\nYou lie there for a while then suddenly, you fall through')
                secretroom1()
            else:
                print('\nYou lie there for a while but nothing happens')
                cribFun()
        elif anw in D:
            room2()   
        elif anw in I:
            print('')
            print(inventory)
            time.sleep(2)
            print('')
            cribFun()
        else:
            print('\nplease input a, b, or c')
            cribFun()
    print('\nit\'s an old crib')
    cribFun()
            

