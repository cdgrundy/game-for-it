OnOrOff = ('on')
Light_On = False
OnOrOff2 = ('on')


def outside():
    def outsideFun():
        global inventory
        print('You can, A) walk back up to the door B) Leave the house.\n')
        anw = input('>') 
        if anw in A:
            door()
        elif anw in B:
            print('\nSuit youself')
            print('\ndo you want to keep going?')
            anw = input('>')
            if anw in Yes:
                PLAY_GAME()
            elif anw in No:
                print('\nok')
            elif anw in I:
                print('')
                print(inventory)
                time.sleep(2)
                print('')
                outsideFun()
            else: 
                print('\nIll take that as a no. ')
        else:
            print('\nplease input a, or b')
            outsideFun()
    print('\nYou are standing outside of the house.')
    outsideFun()
 
 
def door():
    def doorFun():
        global inventory
