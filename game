A = ['a', 'A', 'ey', 'AY'] 
B = ['b', 'B', 'bee'] 
C = ['c', 'C', 'see']
Yes = ['Y', 'y', 'Yes', 'yes']
No = ['N', 'n', 'No', 'no']

def outside():
    def outsideFun():
        print('You can, A) walk back up to the door B) Leave the house.\n')
        anw = input('>') 
        if anw in A:
            door()
        elif anw in B:
            print('')
            print('Suit youself')
        else:
            print('')
            print('please input a, or b')
            outsideFun()
    print('')
    print('You are standing outside of the house.')
    outsideFun()
    
def door():
    def doorFun():
        print('You can, A) go through the door B) Go back to the front lawn.')
        print('')
        anw = input('>')
        if anw in A:
            hallway()
        elif anw in B:
            outside()
        else:
            print('')
            print('please input a, or b')
            doorFun()
    print('')
    print('You are standing in front of a large wooden door.')
    doorFun()
        
def hallway():
    def hallwayFun():
        print('You can, A) Go forward B) Turn right C) go back out the door')
        print('')
