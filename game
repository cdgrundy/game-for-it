def PLAY_GAME():
    def PLAY_GAME_Fun():
        print('You can, A) walk up to the door B) leave the house.\n')
        anw = input('>') 
        if anw in A:
            door()
        elif anw in B:
            print('Suit youself')
            print('\ndo you want to restart?\n')
            anw = input('>')
            if anw in Yes:
                PLAY_GAME()
            elif anw in No:
                print('\nok')
            else: 
                print('\nIll take that as a no. ')
        else:
            print('please input a, or b n/')
            PLAY_GAME_Fun()
    print('\nYou are standing outside of a large old house. The paint is peeling and the windows are shattered and boarded up\n')
    PLAY_GAME_Fun()
        
        
PLAY_GAME()
